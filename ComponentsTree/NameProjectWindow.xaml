<Window x:Class="ComponentsTree.NameProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComponentsTree"
        mc:Ignorable="d"
        Title="Создать проект" Loaded="Window_Loaded" Height="140" Width="350">
    <Grid>
		<Label Content="Наименование проекта:"  Margin="10,10,10,0" VerticalAlignment="Top"/>
		<TextBox x:Name="textBoxProjectName" Margin="10,41,10,0" VerticalAlignment="Top"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
			<Button x:Name="buttonOk" Width="75" Content="OK" IsDefault="True" Click="ButtonOk_Click"/>
			<Button x:Name="buttonCancel" Width="75" Content="Отмена" Margin="5,0,0,0" IsCancel="True" Click="ButtonCancel_Click"/>
		</StackPanel>
	</Grid>
</Window>
